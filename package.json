{
  "name": "acadot",
  "productName": "Acadot",
  "version": "1.0.0",
  "description": "Master Your Focus - AI-powered study app with focus timer and analytics",
  "main": "electron/main.js",
  "author": "Your Name",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:win": "npm run build && electron-builder --win",
    "build:win:portable": "npm run build && electron-builder --win portable",
    "build:win:store": "npm run build && electron-builder --win appx",
    "start": "next start",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "setup": "npm install && prisma generate"
  },
  "build": {
    "appId": "com.acadot.app",
    "productName": "Acadot",
    "copyright": "Copyright Â© 2026",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "public/**/*",
      "prisma/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "appx": {
      "displayName": "Acadot",
      "publisher": "CN=YourPublisherName",
      "publisherDisplayName": "Acadot",
      "identityName": "Acadot",
      "backgroundColor": "#f6f7fb",
      "languages": [
        "en-US"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.90.12",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.1.2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.26",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "openai": "^6.15.0",
    "pdf-parse": "^2.4.5",
    "prisma": "5.22.0",
    "razorpay": "^2.9.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "recharts": "^3.6.0",
    "stripe": "^20.1.0",
    "tldraw": "^4.2.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
